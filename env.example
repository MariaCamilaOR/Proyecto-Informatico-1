# Configuraci√≥n General
NODE_ENV=development
PORT=3000

# Base de Datos
DATABASE_URL=postgresql://doyouremember:password@localhost:5432/doyouremember
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway
GATEWAY_PORT=3000
GATEWAY_HOST=localhost

# Auth Service
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_HOST=localhost

# Photo Service
PHOTO_SERVICE_PORT=3002
PHOTO_SERVICE_HOST=localhost

# Analysis Service
ANALYSIS_SERVICE_PORT=3003
ANALYSIS_SERVICE_HOST=localhost

# Report Service
REPORT_SERVICE_PORT=3004
REPORT_SERVICE_HOST=localhost

# Notification Service
NOTIFICATION_SERVICE_PORT=3005
NOTIFICATION_SERVICE_HOST=localhost

# Servicios Externos
STT_NLP_SERVICE_URL=https://api.stt-nlp.com/v1
STT_NLP_API_KEY=your-stt-nlp-api-key
STT_NLP_API_SECRET=your-stt-nlp-api-secret

IDP_SSO_URL=https://auth.provider.com
IDP_SSO_CLIENT_ID=your-client-id
IDP_SSO_CLIENT_SECRET=your-client-secret
IDP_SSO_REDIRECT_URI=http://localhost:3000/auth/callback

NOTIFICATION_PROVIDER_URL=https://notifications.provider.com
NOTIFICATION_PROVIDER_API_KEY=your-notification-api-key
NOTIFICATION_PROVIDER_API_SECRET=your-notification-api-secret

# Almacenamiento de Objetos
OBJECT_STORAGE_URL=https://storage.provider.com
OBJECT_STORAGE_BUCKET=doyouremember-storage
OBJECT_STORAGE_ACCESS_KEY=your-storage-access-key
OBJECT_STORAGE_SECRET_KEY=your-storage-secret-key
OBJECT_STORAGE_REGION=us-east-1

# Message Broker
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# Cifrado
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@doyouremember.com

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,audio/mpeg,audio/wav

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret

# Development
DEBUG=doyouremember:*
HOT_RELOAD=true
