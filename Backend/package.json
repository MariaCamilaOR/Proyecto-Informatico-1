{
  "name": "doyouremember-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/start.ts",
    "set-claims": "ts-node-dev --respawn --transpile-only src/scripts/setClaims.ts",
    "set-claims-batch": "ts-node-dev --respawn --transpile-only src/scripts/set-claims-batch.ts",
    "bootstrap": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/bootstrap-credentials.ps1 -Start",
    "check-creds": "node ./scripts/check-creds.js",
    "build": "tsc -p .",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "firebase": "^12.4.0",
    "firebase-admin": "^11.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.24",
    "@types/uuid": "^9.0.2",
    "@vercel/node": "^3.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
